  extractEntityState,
  FieldExtractorConfig,
} from '@/core/utils/change-tracking.util';

@Injectable()
export class Update{{pascal model}}UseCase {
  constructor(
    @Inject(TOKENS_CORE.TRANSACTIONPORT)
    private readonly transactionHelper: TransactionPort,
    @Inject({{constant (snake feature)}}_TOKENS.{{constant model}})
    private readonly {{camel model}}Repository: {{pascal model}}Repository,
    @Inject(TOKENS_CORE.ACTIVITYLOGS)
    private readonly activityLogRepository: ActivityLogRepository,
  ) { }

  async execute(
    id: number,
    command: Update{{pascal model}}Command,
    requestInfo?: RequestInfo,
  ): Promise<{{pascal model}} | null> {
    return this.transactionHelper.executeTransaction(
      {{constant (snake model)}}_ACTIONS.UPDATE,
      async (manager) => {
        const {{snake model}} = await this.{{camel model}}Repository.findById(id, manager);
        if (!{{snake model}}) {
          throw new {{pascal model}}BusinessException(
            '{{pascal model}} not found',
            HTTP_STATUS.NOT_FOUND,
          );
        }

        const tracking_config: FieldExtractorConfig[] = [
          { field: 'desc1' },
          {
            field: 'updated_at',
            transform: (val) => (val ? getPHDateTime(val) : null),
          },
          { field: 'updated_by' },
        ];

        const before_state = extractEntityState({{snake model}}, tracking_config);

        {{snake model}}.update({
          desc1: command.desc1,
          updated_by: requestInfo?.user_name,
        });

        const success = await this.{{camel model}}Repository.update(id, {{snake model}}, manager);
        if (!success) {
          throw new {{pascal model}}BusinessException(
            '{{pascal model}} update failed',
            HTTP_STATUS.INTERNAL_SERVER_ERROR,
          );
        }

        const updated_result = await this.{{camel model}}Repository.findById(
          id,
          manager,
        );
        const after_state = extractEntityState(updated_result, tracking_config);
        const changed_fields = getChangedFields(before_state, after_state);

        const log = ActivityLog.create({
          action: {{constant (snake model)}}_ACTIONS.UPDATE,
          entity: {{constant (snake feature)}}_DATABASE_MODELS.{{constant (plural model)}},
          details: JSON.stringify({
            id: updated_result?.id,
            changed_fields: changed_fields,
            updated_by: requestInfo?.user_name || '',
            updated_at: getPHDateTime(updated_result?.updated_at || new Date()),
          }),
          request_info: requestInfo || { user_name: '' },
        });
        await this.activityLogRepository.create(log, manager);

        return updated_result;
      },
    );
  }
}
